@startuml UseCase
left to right direction
skinparam shadowing false
skinparam monochrome reverse

frame "uc: Use Content" {
    actor Visitor
    actor Registered

    Visitor <|-left- Registered

    package "Appreciate content" {
        (Report content)
        (Comment content)
        (Rate content)
        (Bookmark content)
    }

    package "Browse Content" {
        (List content)
        (Search content) <.down. (Filter content)
    }

    package "Open content" as OK {
        (Share content)
        (Watch content)
        (Manage note)
        (Resume content)
        (Open page)
    }

    package "Moteur Arkad" as MAK {
    }

    (Watch content) .down.> MAK : <<extend
    (Resume content) .down.> MAK : <<extend

    package "Interact Profile" {
        (Subscribe author)
        (Report author)
    }

    :Visitor: -down- (List content)
    :Visitor: -down- (Search content)

    :Visitor: -down- (Watch content)
    :Registered: -down- (Resume content)

    :Visitor: -down- (Open page)
    :Registered: -down- (Subscribe author)
    :Registered: -down- (Report author)

    :Visitor: -down- (Share content)
    :Registered: -down- (Bookmark content)
    :Registered: -down- (Manage note)
    :Registered: -down- (Report content)
    :Registered: -down- (Comment content)
    :Registered: -down- (Rate content)
}

@enduml