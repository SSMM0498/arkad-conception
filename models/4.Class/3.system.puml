@startuml "System Class Diagram"
left to right direction
skinparam shadowing false
skinparam monochrome true

frame "cl: System Class Diagram" {
    class user {
        firstname: STRING
        lastname: STRING
        username: STRING
        bio: TEXT
        email: EMAIL
        password: HASH
        status: STATUS
        githubcount: STRING
        googlecount: STRING
        follow: LISTUSER
        userfolder: STRING
        created_at: DATE
        modified_at: DATE
    }

    enum status {
        online
        disconnected
    }

    class arkast {
        title: STRING
        duration: TIME
        likes: NUMBER
        dislikes: NUMBER
        payload: JSON
        published_at: DATE
        modified_at: DATE
    }

    class note {
        user: USER
        arkast: ARKAST
        title: STRING
        pin_at: TIME
        created_at: DATE
        modified_at: DATE
        payload: JSON
    }

    class arkastlist {
        title: STRING
        arkasts: LISTARKAST
        published_at: DATE
        modified_at: DATE
    }

    class comment {
        user: USER
        comments: LISTCOMMENT
        content: TEXT
        published_at: DATE
        modified_at: DATE
    }

    user -- user
    arkastlist --* user
    arkast o-- note
    arkastlist o-- arkast
    user o-- comment
    arkast *-- comment
    arkast --* user
    user *-- note
}

@enduml