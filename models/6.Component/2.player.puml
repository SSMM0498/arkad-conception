@startuml "player component diagram"
skinparam shadowing false
skinparam monochrome true
skinparam componentStyle rectangle
skinparam component {
  FontSize 18
}

frame "cp: Player" {
    package "Player Core" {
        [Player] -up-> [PlayerDOM]
        [Player] -left-> [ActionsTimelineScheduler]
        [Player] <-right-> [PlayerMachineState]
        [ActionsTimelineScheduler] -left- [ActionTriggers]
        [ActionTriggers] -up-> [PlayerDOM]
        [PlayerDOM] -up- [NodeBuilder]
        [PlayerDOM] -up- [NodeFormatedHandler]
    }
    package "Player Interface" {
        [PlayerInterface] -down- [PlayerController]
        [PlayerController] -down- [PlayerProgressBar]
        [PlayerController] -down- [PlayButton]
        [PlayerController] -down- [VolumeHandler]
    }
    [Player] <-down- [PlayerInterface]
}
@enduml