@startuml "Files Handler Component Diagram"
skinparam shadowing false
skinparam monochrome reverse

frame "cp: Files handler" {
    rectangle "Client Side"{
        [Uploader]
        [Downloader]
        package "recorder" {
            [Recorder]
        }
        package player {
            [Player]
        }

        [Recorder] -up-> [Uploader]
        [Player] -up-> [Downloader]
    }
    rectangle "Server Side"{
        [Decompressor]
        [Compressor]
        [FileHandler]
    }

    [FileHandler] -left-> [Compressor]
    [FileHandler] -right-> [Decompressor]
    [Uploader] -up-> [FileHandler]
    [Downloader] -up-> [FileHandler]
}
@enduml